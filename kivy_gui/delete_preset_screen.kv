
<DeletePresetScreen>
	delete_button: delete_button
	cancel_button: cancel_button
	auto_dismiss: False
	size_hint: .7, .3
	title: "Deleting Preset"
	FloatLayout:
		canvas.before:
			Color: 
				rgba: 213/255, 212/255, 212/255, 1
			Rectangle:
				pos: self.pos
				size: self.size
		Label:
			text: "Are you sure you want to delete the preset '[Preset Name]'?\nAll info in this preset will be lost."
			size_hint: (.2, .15)
			pos_hint: {"center_x": .5, "center_y": .7}
			color: 0, 0, 0, 1
	
		Button:
			id: delete_button
			text: "Delete"
			size_hint: (.2, .15)
			pos_hint: {"x": .2, "y": .1}
			
		Button:
			id: cancel_button
			text: "Cancel"
			size_hint: (.2, .15)
			pos_hint: {"x": .6, "y": .1}