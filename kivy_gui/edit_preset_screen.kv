<EditScreenLayout>
	preset_widget: preset_widget
	sms_widget: sms_widget
	phone_widget: phone_widget
	email_widget: email_widget
	password_widget: password_widget
	
	save_button: save_button
	
	BoxLayout:
		size: root.size
		orientation: 'vertical'		
		ScrollView:
			do_scroll_x: False
			effect_cls: "ScrollEffect"
			bar_width: 8	
			GridLayout:
				id: top_screen
				size_hint_y: None
				size: root.size
				spacing: 0, 40
				cols: 1
				row_default_height: "48dp"
				row_force_default: True
				Preset:
					id: preset_widget
					text_input: preset_text
					TextInput:
						id: preset_text
						disabled_foreground_color: 0, 0, 0, 1
						multiline: False
						size_hint: (.8, .8)
						on_text: root.checkPresetNameField(self.text)
				SMS:
					id: sms_widget
					spinner_dropdown: spinner_dropdown
					Spinner:
						id: spinner_dropdown
    					disabled_color: 0, 0, 0, 1
						text: "Click to choose SMS"
						values: ["Verizon", "AT&T", "Sprint", "T-Mobile"]
						on_text: root.checkSMSViolation()
				Phone:
					id: phone_widget
					text_input: phone_text
					TextInput:
						id: phone_text
						multiline: False
						size_hint: (.8, .8)
						on_text: root.checkPhoneNumberField(self.text)
				Email:
					id: email_widget
					text_input: email_text
					TextInput:
						id: email_text
						multiline: False
						size_hint: (.8, .8)
						on_text: root.checkEmailField(self.text)
				Password:
					id: password_widget
					text_input: password_text
					TextInput:
						id: password_text
						multiline: False
						size_hint: (.5, .8)
						on_text: root.checkPasswordField(self.text)
				

		FloatLayout:
			id: bottom_screen
			size_hint: (1, .15)
			canvas.before:
				Color:
					rgba: 194/255, 203/255, 194/255, 1
				Rectangle:
					size: self.size
					pos: self.pos
			Button:
				id: save_button
				text: "Save"
				size_hint: (0.3, 0.2)
				pos_hint: {"x": 0.1, "y": .45}
				on_release: root.saveButton()
			Button:
				id: exit_button
				text: "Exit"
				size_hint: (0.3, 0.2)
				pos_hint: {"x": 0.6, "y": .45}
				on_release: root.exitButton()

					