<Preset@BoxLayout>
	field_label: field_label
	requirement_text: requirement_text
	
	orientation: "horizontal"
	canvas.before:
		Color: 
			rgba: 1, 1, 1, 1
		Rectangle:
			size: self.size
			pos: self.pos
	Label:
		id: field_label
		text_size: self.width, None
		height: self.texture_size[1]
		text: "Preset Name: "
		color: 0, 102/255, 0, 1
		size_hint: (None, 1)
		pos: "600dp", 0
		canvas.before:
			Color: 
				rgba: 194/255, 203/255, 194/255, 1
			Rectangle:
				size: self.size
				pos: self.pos
	Label:
		id: requirement_text
		text: "*Preset name must be unique\n (leading and trailing whitespace\n will be stripped to check)"
		color: 0, 0, 0, 1
		size_hint: (.4, 1)


