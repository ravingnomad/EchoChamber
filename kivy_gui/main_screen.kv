
<MainScreenLayout>
	computer_screen: computer_screen
	phone_screen: phone_screen
	
	BoxLayout:
		top_screen: top_screen
		bottom_screen: bottom_screen
		orientation: "vertical"
		FloatLayout:
			id: top_screen
			Label:
				size_hint: 1, .05
				pos_hint: {'top': 1, 'center_x': .5}
				text: "Using Preset: "
				color: 0, 0, 0, 1
				canvas.before: 
					Color:
						rgba: 1, 1, 1, 1
					Rectangle:
						size: self.size
						pos: self.pos
			BoxLayout:
				id: computer_screen
				file_list: file_list
				orientation: "vertical"
				size_hint: .4, .8
				pos_hint: {'left': 1, 'center_y': .5}
				canvas.before:
					Color:
						rgba: 1, 1, 1, .1
					Rectangle:
						pos: self.pos
						size: self.size
				Label:
					text: "My Computer"
					size_hint: 1, .1
					color: 0, 0, 0
					canvas.before: 
						Color:
							rgba: 1, 1, 1, 1
						Rectangle:
							size: self.size
							pos: self.pos
				FileChooserListView:
					id: file_list
			BoxLayout:
				id: phone_screen
				transferred_files: transferred_files
				orientation: "vertical"
				size_hint: .4, .8
				pos_hint: {"right": 1, "center_y": .5}
				canvas.before:
					Color:
						rgba: 1, 1, 1, .1
					Rectangle:
						pos: self.pos
						size: self.size
				Label:
					text: "Target: "
					size_hint: 1, .1
					color: 0, 0, 0
					canvas.before: 
						Color:
							rgba: 1, 1, 1, 1
						Rectangle:
							size: self.size
							pos: self.pos
				BoxLayout:
					id: transferred_files
					test_text: test_text
					Label:
						id: test_text
						text_size: self.width, None
						height: self.texture_size[1]
			Button:
				text: "Send File to Target"
				size_hint: .2, .1
				pos_hint: {"center_y": .5, "center_x": .5}
				on_press: root.transferFile()
		FloatLayout:
			id: bottom_screen
			size_hint: (1, .15)
			canvas.before:
				Color:
					rgba: 194/255, 203/255, 194/255, 1
				Rectangle:
					size: self.size
					pos: self.pos
			Button:
				id: change_preset_button
				text: "Change Preset"
				size_hint: (0.2, 0.2)
				pos_hint: {"x": 0.1, "y": 0.45}
				
			Button:
				id: view_preset_button
				text: "View Preset"
				size_hint: (0.2, 0.2)
				pos_hint: {"x": 0.4, "y": 0.45}
				
			Button:
				id: exit_button
				text: "Exit"
				size_hint: (0.2, 0.2)
				pos_hint: {"x": 0.7, "y": 0.45}

