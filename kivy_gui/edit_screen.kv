<PresetName@BoxLayout>
	field_label: field_label
	text_input: text_input
	requirement_text: requirement_text
	
	orientation: "horizontal"
	canvas.before:
		Color: 
			rgba: 1, 1, 1, 1
		Rectangle:
			size: self.size
			pos: self.pos
	Label:
		id: field_label
		text_size: self.width, None
		height: self.texture_size[1]
		text: "Preset Name: "
		color: 0, 102/255, 0, 1
		size_hint: (None, 1)
		pos: "600dp", 0
		canvas.before:
			Color: 
				rgba: 194/255, 203/255, 194/255, 1
			Rectangle:
				size: self.size
				pos: self.pos
	TextInput:
		id: text_input
		multiline: False
		size_hint: (.8, .8)
		text: "Hello There!"
	Label:
		id: requirement_text
		text: "*Requirements of the input should go here"
		color: 0, 0, 0, 1
		


<SMS@BoxLayout>
	field_label: field_label
	requirement_text: requirement_text
	spinner_dropdown: spinner_dropdown
	
	orientation: "horizontal"
	canvas.before:
		Color: 
			rgba: 1, 1, 1, 1
		Rectangle:
			size: self.size
			pos: self.pos
	Label:
		id: field_label
		text_size: self.width, None
		height: self.texture_size[1]
		text: "SMS (Short Message Service): "
		color: 0, 102/255, 0, 1
		size_hint: (.5, 1)
		pos: "600dp", 0
		canvas.before:
			Color: 
				rgba: 194/255, 203/255, 194/255, 1
			Rectangle:
				size: self.size
				pos: self.pos
	Spinner:
		id: spinner_dropdown
		text: "Click to choose SMS!"
		values: ["SMS1", "SMS2", "SMS3"]


	Label:
		id: requirement_text
		text: "*Requirements of the input should go here"
		color: 0, 0, 0, 1
		
