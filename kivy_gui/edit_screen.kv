<EditScreenLayout>
	top_screen: top_screen
	bottom_screen: bottom_screen
	save_button: save_button
	exit_button: exit_button
	preset_name_input: preset_name_input
	
	BoxLayout:
		size: root.size
		orientation: 'vertical'		
		ScrollView:
			do_scroll_x: False
			effect_cls: "ScrollEffect"
			bar_width: 8	
			GridLayout:
				id: top_screen
				size_hint_y: None
				size: root.size
				spacing: 0, 40
				cols: 1
				row_default_height: "48dp"
				row_force_default: True
				PresetName:
					id: preset_name_input
				SMS:
				Phone:
				Email:
				Password:
				

		FloatLayout:
			id: bottom_screen
			size_hint: (1, .15)
			canvas.before:
				Color:
					rgba: 194/255, 203/255, 194/255, 1
				Rectangle:
					size: self.size
					pos: self.pos
			Button:
				id: save_button
				text: "Save"
				size_hint: (0.3, 0.2)
				pos_hint: {"x": 0.1, "y": .45}
			Button:
				id: exit_button
				text: "Exit"
				size_hint: (0.3, 0.2)
				pos_hint: {"x": 0.6, "y": .45}

					